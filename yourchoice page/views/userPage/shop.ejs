                                            </div>
                                            <br>

                                            <a href="/showdetails/<%=products[i]._id%>">
                                                <h5 style="color: rgb(174, 36, 36);">Product Details</h5>
                                            </a>

                                            <div class="product__item__text">
                                                <h5>
                                                    <%=products[i].name%>
                                                </h5>
                                                <form id="addToCartForm_<%=products[i]._id%>" action="/addcart/<%=products[i]._id%>" method="post">
                                                    <button class="add-cart" type="button" onclick="addToCart('<%=products[i]._id%>')">+ Add To Cart</button>
                                                </form>

                                                <h5>
                                                    ₹ <%=products[i].price%>
                                                </h5>




                                               
                                            </div>
                                        </div>
                                    </div>
                                    <% }%>

                                        <%}else{%>
                                            <div>
                                                <h1>There are no products</h1>
                                            </div>
                                            <% } %>




                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product__pagination">
                                <% if (currentPage> 1) { %>
                                    <a href="/shop?page=<%= currentPage - 1 %>" aria-label="Previous">
