                    <div id="reloadDiv">
                        <div class="row">
                            <% if(products.length> 0){ %>
                                <% for(let i=0;i<products.length;i++){ %>



                                    <div class="col-lg-4 col-md-6 col-sm-6">
                                        <div class="product__item">
                                            <div class="product__item__pic set-bg"
                                                data-setbg="sharpImage/<%=products[i].image[0]%>">

